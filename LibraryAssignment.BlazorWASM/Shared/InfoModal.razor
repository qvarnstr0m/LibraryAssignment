<div class="fixed inset-0 z-50 flex items-center justify-around bg-black bg-opacity-50 p-4">
    <div class="bg-customWhite  text-customBlue w-3/4 md:w-1/3 lg:w-1/4 max-h-3/4 rounded-lg shadow-md p-5 overflow-y-auto">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold">Info</h2>
            <button @onclick=ToggleInfoModal class="text-2xl">&times;</button>
        </div>
        <div class="mt-3">
            <p>@Message</p>
        </div>
    </div>
</div>

@code {

    [CascadingParameter(Name = "ShowInfoModalState")]
    private bool _showInfoModal { get; set; }

    [CascadingParameter(Name = "ToggleInfoModalAction")]
    private Action ToggleInfoModal { get; set; }

    [Parameter]
    public string Message { get; set; }

}