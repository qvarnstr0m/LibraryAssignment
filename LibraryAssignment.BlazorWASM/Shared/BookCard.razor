<div class="w-full md:w-1/5 rounded bg-customWhite drop-shadow-lg text-customBlue flex flex-col font-rubik mb-5 md:mb-0">
    <div class="flex flex-col items-center">
        <img src=@GetBookCoverUrl() alt="@Title book cover" class="rounded-lg drop-shadow-md w-4/5 my-5">
    </div>
    <div class="flex flex-row">
        <h1 class="font-bold px-3">title:</h1>
        <p>@Title</p>
    </div>
    <div class="flex flex-row">
        <h1 class="font-bold px-3">author:</h1>
        <p>@Author</p>
    </div>
    <div class="flex flex-row">
        <h1 class="font-bold px-3">description:</h1>
        <p>@Description</p>
    </div>
    <div class="flex flex-row">
        <h1 class="font-bold px-3">is available:</h1>
        <p>
            @if (IsAvailable)
            {
                <span class="text-green-500">yes</span>
            }
            else
            {
                <span class="text-red-500">no</span>
            }
        </p>
    </div>
</div>


@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    [Parameter] public string Author { get; set; } = string.Empty;
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Description { get; set; } = string.Empty;
    [Parameter] public bool IsAvailable { get; set; }
    
    private string GetBookCoverUrl()
    {
        return $"images/book-covers/{Id}.jpeg";
    }
}