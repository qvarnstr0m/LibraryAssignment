                <NavLink href="/" @onclick="ToggleMenu">home.</NavLink>
            </li>
            <li class="hover:underline">
                <NavLink href="/books" @onclick="ToggleMenu">all books.</NavLink>
            </li>
            <li class="hover:underline">
                <NavLink href="#" @onclick="ToggleMenu">about library.</NavLink>
            </li>
            <li class="hover:underline">
                <NavLink href="#" @onclick="ToggleMenu">contact.</NavLink>
            </li>
        </ul>
    </div>
</div>

@code {

    [CascadingParameter(Name = "ShowMenuState")]
    private bool _showMenu { get; set; }

    [CascadingParameter(Name = "ToggleMenuAction")]
    private Action ToggleMenu { get; set; }

}