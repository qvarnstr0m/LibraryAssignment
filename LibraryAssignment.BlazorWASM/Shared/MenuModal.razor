    <div class="bg-customWhite  text-customBlue w-3/4 md:w-1/3 lg:w-1/4 max-h-3/4 rounded-lg shadow-md p-5 overflow-y-auto">
        <div class="flex justify-end">
            <button @onclick="ToggleMenu" class="text-3xl font-bold hover:text-customYellow">&times;</button>
        </div>
