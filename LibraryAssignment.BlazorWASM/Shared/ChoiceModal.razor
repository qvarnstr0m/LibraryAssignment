<div class="fixed inset-0 z-50 flex items-center justify-around bg-black bg-opacity-50 p-4">
    <div class="bg-customWhite  text-customBlue w-3/4 md:w-1/3 lg:w-1/4 max-h-3/4 rounded-lg shadow-md p-5 overflow-y-auto">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold">Are you sure?</h2>
            <button @onclick="CloseModal" class="text-2xl">&times;</button>
        </div>
        <div class="mt-3">
            <p>@Message</p>
        </div>
        <div class="flex flex-row justify-around">
            <button @onclick="ConfirmDelete" class="bg-customOrange text-customBlue hover:text-customYellow rounded-lg px-4 py-2 mt-5">
                Yes
            </button>
            <button @onclick="CloseModal" class="bg-customOrange text-customBlue hover:text-customYellow rounded-lg px-4 py-2 mt-5">
                No
            </button>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public EventCallback OnDeleteConfirmation { get; set; }
    
    [Parameter]
    public EventCallback CloseModal { get; set; }

    [Parameter]
    public string Message { get; set; }

    private void ConfirmDelete()
    {
        OnDeleteConfirmation.InvokeAsync();
    }
    
    private void Close()
    {
        CloseModal.InvokeAsync();
    }

}